{
    "defaults": {
        "hideElements": "iframe,object",
        "ignore": [
            "notice",
            "warning"
        ],
        "timeout": 30000,
        "screenCapture": false,
        "includeWarnings": true,
        "level": "WCAG2AA",
        "reporter": "html",
        "reporterOptions": {
            "file": "pa11y-ci-report.html"
        }
    },
    "urls": [
        {
            "url": "http://localhost:3000",
            "actions": [
                {
                    "type": "goto",
                    "url": "http://localhost:3000"
                },
                {
                    "type": "wait",
                    "ms": 5000
                }
            ]
        }
    ]
}